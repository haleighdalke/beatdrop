<h1><%= "#{@artist.name}'s Songs" %></h1>

<table style="width:50%">
  <tr>
    <th>Play</th>
    <th>Title</th>
    <th>Genre</th>
  </tr>

<% @artist.songs.each {|song| %>
  <tr>
    <td><%= button_to "Play", plays_path, method: :post, params: { song_id: song.id }%></td>
    <td><%= link_to song.title, song %></td>
    <td><%= link_to song.genre.name, song.genre %></td>
  </tr>
<% } %>
</table>
<br>
<hr>
<br>
<%= button_to "All Songs", songs_path, method: :get %><br>
<%= button_to "All Artists", artists_path, method: :get %><br>
<%= button_to "All Genres", genres_path, method: :get %>