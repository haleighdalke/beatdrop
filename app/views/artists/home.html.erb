<h1><%= "Welcome #{@artist.name}!" %></h1>

<table style="width:50%">
    <tr>
        <th>Title</th>
        <th>Genre</th>
        <th></th>
        <th></th>
    </tr>

<% @artist.songs.each {|song| %>
    <tr>
        <td><%= song.title %></td>
        <td><%= song.genre.name %></td>
        <td><%= button_to "Edit", edit_song_path(song), method: :patch, params: {song_id: song.id} %></td>
        <td><%= button_to "Delete", song, method: :delete, params: {song_id: song.id} %></td>
    </tr>
<% } %>
</table>

