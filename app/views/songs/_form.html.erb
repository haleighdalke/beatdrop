<%= form_for @song do |f| %>

    <%= f.hidden_field :artist_id, value: current_artist.id %><br>

    <%= f.label "Title" %>
    <%= f.text_field :title %><br>

    <%= f.label "Genre" %>
    <%= f.collection_select(:genre_id, Genre.all, :id, :name) %><br>
    
    <%= f.label "Link to Song" %>
    <%= f.text_field :sound_link %><br>

    <%= f.label "Link to Music Video" %>
    <%= f.text_field :video_link %><br>
    <br>
    <%= f.submit %>
<% end %>